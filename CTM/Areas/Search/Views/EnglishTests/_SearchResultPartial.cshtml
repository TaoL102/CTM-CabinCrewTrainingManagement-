@using CTMLib.Resources
@model IEnumerable<CTM.Areas.Search.ViewModels.EnglishTests.SearchResult>


@if (Model.Any())
{

    <!-- #region Pagination -->
    var routeValues =
     new
     {
         CCName =ViewBag.CCName,
         CategoryID = ViewBag.CategoryID,
         FromDate = ViewBag.FromDate,
         ToDate = ViewBag.ToDate,
         IsLatest = ViewBag.IsLatest,
         Area = "Search",
     };
    @SharedHelpers.Pagination("Search", "EnglishTests", "search_result_table", "loader",routeValues,ViewBag.Page,ViewBag.TotalPage)

    <!-- #endregion -->

        <div>


            <table class="mdl-data-table mdl-js-data-table ">
                <thead>
                    @EnglishTests.SearchResultHelpers.Result_Table_Header()
                </thead>
                <tbody>
                    @foreach (var group in Model.GroupBy(o => o.CabinCrewName))
                    {

                        foreach (var item in group)
                        {
                            @EnglishTests.SearchResultHelpers.Result_Table_Row(item)
                        }
                    }
                </tbody>
            </table>


        </div>
        @SharedHelpers.Pagination("Search", "EnglishTests", "search_result_table", "loader", routeValues, ViewBag.Page, ViewBag.TotalPage)

}
else
{
    <p>@ConstViews.INFO_RecordsNotFound</p>
}


