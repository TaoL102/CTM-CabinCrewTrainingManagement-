<div class="form-horizontal">
    <h4>英语考核成绩上传</h4>

    @using (Html.BeginForm("DownloadTemplate", "EnglishTests", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="下载模板" class="mdl-button mdl-js-button mdl-button--primary" />
            </div>
        </div>
    }

    <hr />
    @using (Html.BeginForm("Upload", "EnglishTests", null, FormMethod.Post, new { enctype = "multipart/form-data" ,id="upload_Form"}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @* CategoryName*@
        <div class="form-group  input-field col s12">
            @Html.DisplayName("考核项目")
            @Html.DropDownList("CategoryID", (SelectList)ViewBag.EnglishTestCategoryList, null, htmlAttributes: new { @class = "form-control " })


        </div>

        @*date*@
        <div class="form-group">
            @Html.DisplayName("考核日期")
            <input class="form-control text-box single-line valid" data-val="true" data-val-date="The field 日期 must be a date." data-val-required="The 日期 field is required." id="Date" name="Date" type="date">
        </div>



        <div class="form-group">
            <div class="col-md-10">
                <input type="file" name="upload" id="ExcelUrl" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" class="btn btn-raised btn-round btn-default btn-file">

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="上传" class="mdl-button mdl-js-button mdl-button--primary" />
            </div>
        </div>
    }
</div>
